<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Create</title>

    <%- include("../partials/bootstrap.css.ejs"); %>
</head>
<body>
    <header>
        <%- include("../partials/nav"); %>
    </header>

    <h1 style="padding: 0.5em 1em 0 1em">Hello Create!</h1>
    <hr>

    <section style="padding: 0.8em">
        <form class="row g-3" action="/posts" method="POST">
            <div class="mb-3">
                <label for="inputTitle" class="form-label">Title</label>
                <input type="text" class="form-control" id="inputTitle" placeholder="Title of the post" name="title" required>
            </div>
            <div class="mb-3">
                <label for="inputBody" class="form-label">Post content</label>
                <textarea class="form-control" id="inputBody" rows="3" name="body"></textarea>
            </div>
            <div class="col-md-12">
                <label for="inputUserId" class="form-label">User Id</label>
                <input type="number" min="1" max="10" class="form-control" id="inputUserId" name="userId" value="1" required>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </section>

    <%- include("../partials/bootstrap.js.ejs"); %>
</body>
</html>
